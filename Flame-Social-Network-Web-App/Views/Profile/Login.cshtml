@{ 
    Layout = "_Layout";
}

@model LoginModel


<div class="loginbox">
    <form asp-action="Login">
        <img src="~/images/flame.png" class="avatar" />
        <h1>Login Here</h1>
        <div class="form-group">
            <label asp-for="Username" class="label-control"></label>
            <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password" class="label-control"></label>
            <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" />
        </div>
        <div>
            <input type="submit" name="" value="Login" />
            <a href="#">Lost your password?</a><br />
            <a href='/Profile/Register'>Don`t you have an account?</a>
        </div>
        <div class="validation-login" asp-validation-summary="All"></div>
    </form>
</div>
