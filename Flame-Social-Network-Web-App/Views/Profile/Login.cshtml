@{ 
    Layout = "_Layout";
}

@model LoginModel

<div class="loginbox">
    <form asp-action="Login" asp-controller="Profile" method="post">

            <img src="~/images/avatar_icon.png" class="avatar" />
            <h1>Login Here</h1>
            <div>
                <p>Username</p>
                <input type="text" name="" placeholder="Enter Username" />
                <p>Password</p>
                <input type="password" name="" placeholder="Enter Password" />
                <input type="submit" name="" value="Login" />
                <a href="#">Lost you password?</a><br />
                <a href='/Profile/Register'>Don`t have an account?</a>
            </div>

    </form>
</div>